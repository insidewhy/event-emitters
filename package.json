{
  "name": "event-emitters",
  "version": "1.0.0",
  "description": "event emitters",
  "author": "insidewhy <github@chilon.net>",
  "license": "ISC",
  "main": "lib.es5/index.js",
  "module": "lib.es5m/index.js",
  "es2015": "lib.es2015/index.js",
  "typings": "lib.es2015/index",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git://github.com/insidewhy/event-emitters.git"
  },
  "keywords": [
    "events",
    "event",
    "emitters"
  ],
  "scripts": {
    "prepublishOnly": "yarn build",
    "build": "yarn build-modern && yarn build-es5 && yarn build-es5 -m es2015 --outDir lib.es5m",
    "build-modern": "tsc -p src/tsconfig.json",
    "build-es5": "tsc -p src/tsconfig.es5.json",
    "build-watch": "tsc -w -p src/tsconfig.es5.json",
    "lint": "eslint 'src/*.ts'",
    "validate-prettiness": "prettier -c 'src/*.ts'",
    "test": "yarn build && yarn jest",
    "validate": "yarn test && yarn lint && yarn validate-prettiness",
    "watch": "yarn build-es5 && concurrently 'yarn build-watch' 'yarn jest-watch'",
    "jest": "jest",
    "jest-watch": "yarn jest -w"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1",
    "typescript": "^3.8.3"
  }
}
